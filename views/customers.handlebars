{{!-- Populate each customer into a box --}}
{{!-- Form Details: customer_first_name, customer_last_name, customer_phone, customer_email, dog_name --}}

<h1>Register a NEW Customer!</h1>
<form>
  <label for="first-name-signup">Fist Name:</label><br>
  <input type="text" id="first-name-signup" name="first-name-signup"><br>
  <label for="last-name-signup">Last Name:</label><br>
  <input type="text" id="last-name-signup" name="last-name-signup"><br>
  <label for="phone-signup">Phone:</label><br>
  <input type="text" id="phone-signup" name="phone-signup"><br>
  <label for="email-signup">Email:</label><br>
  <input type="text" id="email-signup" name="email-signup"><br>
  <label for="dog-signup">Dog Name:</label><br>
  <input type="text" id="dog-signup" name="dog-signup"><br><br>
  <input type="submit" value="Sign Me Up!">
</form>

<h2>Current Customers</h2>
{{#each customers as |customer| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h3>{{customer_first_name}} {{customer_last_name}}</h3>
    <h3>Phone: {{customer_phone}}</h3>
    <h3>Dog Name: {{dog_name}}</h3>
  </div>
</div>
{{/each}}

<script src="/js/addCustomer.js"></script>

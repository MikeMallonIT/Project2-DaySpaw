<form action="put" class="row" id="addAppt">
  <div class="row">
    <div class="input-field col s12 m6">
        <select id="appointment-name" class="browser-default">
          <option value="" selected>Select Customer</option>
          {{#each customers as |customer|}}
          <option value="{{customer_id}}">{{customer_first_name}} {{customer_last_name}}</option>
          {{/each}}
        </select>
      </div>



    <div class="input-field col s12 m6">
        <select id="appointment-time"  class="browser-default">
          <option value="" selected>Choose Appointment Time</option>
          <option value="09">9:00</option>
          <option value="10">10:00</option>
          <option value="11">11:00</option>
          <option value="12">12:00</option>
          <option value="13">13:00</option>
          <option value="14">14:00</option>
          <option value="15">15:00</option>
          <option value="16">16:00</option>
          <option value="17">17:00</option>
        </select>      
      </div>
  </div>
    
  <button id="addAppt" style="margin-top: 50px;" class="btn-small waves-effect waves-light" type="submit" name="apptSubmit">Submit
      <i class="material-icons right">send</i>
  </button>
</form>
<script src="/js/addAppt.js"></script>
